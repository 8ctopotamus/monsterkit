<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Monster:</h3>

    <form class="form new-monster-form">
      <div class="form-group">
        <label for="monster-name">monster name:</label>
        <input class="form-input" type="text" id="monster-name" name="monster-name" />
      </div>
      <div class="form-group">
        <label for="monster-desc">description:</label>
        <textarea class="form-input" id="monster-desc" name="monster-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create Monster</button>
      </div>
    </form>
  </div>

  {{#if monster.length}}
  <div class="col-md-6 project-list">
    <h3>Current Monster:</h3>

    {{#each monsters as |monster|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/monster/{{monster.id}}">{{monster.name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{monster.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

